        <RadioButton x:Name="MillimeterToCentimeter_Radio" Content="Millimeter =&gt; Centimeter" HorizontalAlignment="Left" Margin="10,139,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="InchToMeter_Radio" Content="Inch =&gt; Meter" HorizontalAlignment="Left" Margin="10,192,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
